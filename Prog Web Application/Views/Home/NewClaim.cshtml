@model Prog_Web_Application.Models.Claim
@{
    ViewData["Title"] = "New Claim";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Claim Submission Form</title>
    <link rel="stylesheet" href="~/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Claim submission form container -->
    <div class="form-body">
    <div class="form-container">
        <div class="title">Claim Submission</div>
        <div class="content">
            <form asp-controller="Claim" asp-action="CreateClaim" method="post" enctype="multipart/form-data">
                <div class="user-details">
                    <div class="input-box">
                        <input type="text" asp-for="FullName" placeholder="Enter your name" required>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="text" asp-for="Username" placeholder="Enter your username" required>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="email" asp-for="Email" placeholder="Enter your email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="text" asp-for="Phone" placeholder="Enter your number" required>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="text" asp-for="ClaimDescription" placeholder="Enter your claim" required>
                        <span asp-validation-for="ClaimDescription" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="number" asp-for="HoursWorked" placeholder="Enter your hours worked" required>
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <input type="number" step="0.01" asp-for="HourlyRate" placeholder="Enter your hourly rate" required>
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <label for="file-upload" class="file-upload-label">Choose File</label>
                        <input type="file" name="uploadedFile" class="file-upload" id="file-upload" />
                        <span class="file-upload-text" id="file-name-label">No file chosen</span>
                        <br>
                        <small class="form-text text-muted">
                            Allowed file types: .pdf, .docx, .xlsx, .txt, .md. Maximum file size: 10 MB.
                        </small>
                        <!-- Error message for invalid file upload -->
                        <div id="file-error" style="display: none; color: #d9534f; font-size: 0.9em; margin-top: 5px;">
                            <strong>File Error:</strong> The file must be a valid type (PDF, DOCX, XLSX, TXT, MD) and less than 10 MB. Please try again.
                        </div>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
</div>
<script src="site.js"></script>
</body>
</html>