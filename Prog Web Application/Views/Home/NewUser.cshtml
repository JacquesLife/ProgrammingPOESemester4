@model Prog_Web_Application.Models.User

@{
    ViewData["Title"] = "Create New User"; 
}

<h1>Create New User</h1>

<form asp-controller="User" asp-action="CreateUser" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" required placeholder="Enter full name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" required placeholder="Enter username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" required placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" required placeholder="Enter email address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" required placeholder="Enter phone number" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Role"></label>
        <input asp-for="Role" required placeholder="Enter user role" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit">Create User</button>
</form>
