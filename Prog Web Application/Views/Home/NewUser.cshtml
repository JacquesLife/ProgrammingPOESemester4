@model Prog_Web_Application.Models.User

@{
    ViewData["Title"] = "Create New User"; 
}

<h2>Create New User</h2>
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Create New User Form</title>
    <link rel="stylesheet" href="~/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="form-body">
        <div class="form-container">
            <div class="title">Sign Up</div>
            <div class="content">
                <form asp-controller="User" asp-action="CreateUser" method="post">
                    <div class="user-details">
                        <div class="input-box"> 
                            <span class="details">Full Name</span>
                            <input asp-for="Name" required placeholder="Enter full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <span class="details">Username</span>
                            <input asp-for="Username" required placeholder="Enter username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <span class="details">Password</span>
                            <input asp-for="Password" type="password" required placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <span class="details">Email</span>
                            <input asp-for="Email" type="email" required placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <span class="details">Phone Number</span>
                            <input asp-for="Phone" required placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="input-box">
                            <label asp-for="Role" class="form-label">Select Role</label>
                            <select asp-for="Role" class="form-control" asp-items="@(new SelectList(new[] { "Academic Manager", "Programme Coordinator", "Lecturer" }))" required>
                                <option value="">Please select a role</option> 
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="button">
                        <input type="submit" value="Create User">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="site.js"></script>
</body>
</html>