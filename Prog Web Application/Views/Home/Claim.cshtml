@* forum for the Contract Monthly Claim System *@

@{
    ViewData["Title"] = "Forum - Contract Monthly Claim System";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Registration Form</title>
    <link rel="stylesheet" href="style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Registration form container -->
    <div class="form-body">
        <div class="form-container">
            <div class="title">Registration</div>
            <div class="content">
                <form action="#" enctype="multipart/form-data">
                    <div class="user-details">
                        <div class="input-box">
                            <span class="details">Full Name</span>
                            <input type="text" placeholder="Enter your name" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Username</span>
                            <input type="text" placeholder="Enter your username" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Email</span>
                            <input type="email" placeholder="Enter your email" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Phone Number</span>
                            <input type="text" placeholder="Enter your number" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Claim</span>
                            <input type="text" placeholder="Enter your claim" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Hours worked</span>
                            <input type="text" placeholder="Enter your hours worked" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Hourly Rate</span>
                            <input type="text" placeholder="Enter your hourly rate" required>
                        </div>
                        <!-- Additional Notes Box -->
                        <div class="input-box">
                            <span class="details">Additional Notes</span>
                            <textarea class="text-area" placeholder="Enter any additional notes here..."></textarea>
                        </div>
                        <!-- File Upload -->
                        <!-- File Upload -->
                        <div class="input-box">
                        <span class="details">Upload File</span>
                        <label for="file-upload" class="file-upload-label">Choose File</label>
                        <input type="file" id="file-upload" class="file-upload" />
                        </div>
                    </div>
                    <div class="button">
                        <input type="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="sites.js"></script>
</body>
</html>
